  outline: none;
}

QPushButton:pressed {
    background-color: #1a252f;
}

QPushButton:disabled {
    background-color: #7f8c8d;
    color: #bdc3c7;
}

/* Call button is now yellow instead of green */
QPushButton#callButton {
    background-color: #f1c40f; /* Yellow color */
}

QPushButton#callButton:hover {
