/* Basic button style */
QPushButton {
  color: white;
  border-radius: 4px;
  padding: 6px;
  font-weight: bold;
  background-color: #34495e;
  border: 2px solid transparent;
}

/* Hover state: Increase brightness and add border */
QPushButton:hover {
  background-color: #3d5a73; /* a brighter blue-gray */
  border: 2px solid #ecf0f1;
}

/* Pressed state: Darken further and maintain border */
QPushButton:pressed {
  background-color: #2a3d4f; /* a darker tone */
  border: 2px solid #ecf0f1;
}

/* Checked/Active state: Use a distinct color with a visible border */
QPushButton:checked, QPushButton:checked:hover {
  background-color: #2980b9;
  border: 2px solid #ecf0f1;
}

/* Focus state: Emphasize with a contrasting border */
QPushButton:focus {
  border: 2px solid #f1c40f;
}

